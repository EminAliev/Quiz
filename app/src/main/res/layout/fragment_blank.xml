<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/lay_image"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/image_questions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </FrameLayout>

        <TextView
            android:id="@+id/text_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Что ты выбираешь ?"
            android:textSize="20sp"
            android:textStyle="italic" />


        <CheckBox
            android:id="@+id/check_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ответ A" />

        <CheckBox
            android:id="@+id/check_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ответ B" />

        <CheckBox
            android:id="@+id/check_C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ответ C" />

        <CheckBox
            android:id="@+id/check_D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ответ D" />

    </LinearLayout>

</RelativeLayout>