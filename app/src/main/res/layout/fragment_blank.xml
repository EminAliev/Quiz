<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment">

   <LinearLayout
       android:layout_margin="16dp"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       
       <FrameLayout
           android:id="@+id/lay_image"
           android:layout_width="match_parent"
           android:layout_height="200dp">

           <ImageView
               android:id="@+id/image_questions"
               android:scaleType="fitCenter"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

       </FrameLayout>

       <TextView
           android:id="@+id/text_question"
           android:text="Что ты выбираешь ?"
           android:textStyle="italic"
           android:textSize="20sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />


       <CheckBox
           android:id="@+id/check_A"
           android:text="Ответ A"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

       <CheckBox
           android:id="@+id/check_B"
           android:text="Ответ B"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

       <CheckBox
           android:id="@+id/check_C"
           android:text="Ответ C"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

       <CheckBox
           android:id="@+id/check_D"
           android:text="Ответ D"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

   </LinearLayout>

</RelativeLayout>